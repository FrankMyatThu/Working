<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearRow"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_weight="1"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:weightSum="1">

    <!-- Row start. -->

    <!--Blank area start. -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.025">
    </RelativeLayout>
    <!--Blank area end. -->

    <!--Photo area start. -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imgSongImage"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/album_art"></ImageView>
    </RelativeLayout>
    <!--Photo area end. -->

    <!--Info area start. -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.55"
        android:orientation="vertical"
        android:weightSum="2">

        <!-- Song info in myanmar start. -->
        <TextView
            android:id="@+id/txtMyanmarInfo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:textSize="9pt"
            android:textStyle="bold"
            android:textColor="@color/lightgray"
            android:text="Myanmar text"
            android:layout_marginTop="10dp" />
        <!-- Song info in myanmar end. -->

        <!-- Song info in english start. -->
        <TextView
            android:id="@+id/txtEnglishInfo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/txtMyanmarInfo"
            android:textSize="7pt"
            android:textColor="@color/lightgray"
            android:text="English text"
            android:gravity="center_vertical" />
        <!-- Song info in english end. -->

    </RelativeLayout>
    <!--Info area end. -->

    <!--Favorite area start. -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.1">
        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/PlayerButtonfont_sizeMedian"
            android:text="@string/FavoriteOn"/>
    </RelativeLayout>
    <!--Favorite area end. -->

    <!--Running Indicator start. -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:gravity="center_vertical|right"
        android:weightSum="2">

        <!-- Song length start. -->
        <TextView
            android:id="@+id/txtSongLength"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/PlayerButtonfont_sizeSmall"
            android:layout_marginTop="10dp" />
        <!-- Song length end. -->

        <!-- Song running icon start. -->
        <!--<VideoView
            android:id="@+id/vdoRunningSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/play">
        </VideoView>-->
        <!--<ninzimay.mediaplayer.ninzimay.CustomGifView
            android:id="@+id/gifRunningSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"/>-->
        <Button
            android:id="@+id/btnRunningSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/PlayerButtonfont_sizeMedian"
            android:text="@string/RunningIndicator"/>
        <!-- Song running icon end. -->

    </RelativeLayout>
    <!--Running Indicator end. -->

    <!--Blank area start. -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.025">
    </RelativeLayout>
    <!--Blank area end. -->

    <!-- Row end. -->
</LinearLayout>