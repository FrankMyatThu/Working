<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@color/transparentBlackListing">
    <!-- Photo area start. -->
    <RelativeLayout
        android:id="@+id/PhotoArea"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="20dp">
        <ImageView
            android:id="@+id/imgSongImage"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/album_art">
        </ImageView>
    </RelativeLayout>
    <!-- Photo area end. -->

    <!-- Song info in myanmar start. -->
    <TextView
        android:id="@+id/txtMyanmarInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/PhotoArea"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/lightgray"
        android:text="Myanmar text" />
    <!-- Song info in myanmar end. -->

    <!-- Song info in english start. -->
    <TextView
        android:id="@+id/txtEnglishInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/txtMyanmarInfo"
        android:layout_toRightOf="@+id/PhotoArea"
        android:textSize="7pt"
        android:textColor="@color/lightgray"
        android:text="English text"
        android:gravity="center_vertical" />
    <!-- Song info in english end. -->

    <!-- Close start. -->
    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|right"
        android:background="@null"
        android:layout_weight="1"
        android:textColor="@color/lightgray"
        android:textSize="40sp"
        android:text="@string/Close" />
    <!-- Close end. -->

    <!-- Player button(s) start. -->
    <!-- Previous start. -->
    <Button
        android:id="@+id/btnBackward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/PhotoArea"
        android:gravity="center_horizontal|center_vertical"
        android:background="@null"
        android:textColor="@color/lightgray"
        android:textSize="@dimen/PlayerButtonfont_sizeMedian"
        android:text="@string/Previous"/>
    <!-- Previous end. -->
    <!-- Play Pause start. -->
    <Button
        android:id="@+id/btnPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnBackward"
        android:layout_toLeftOf="@+id/btnForward"
        android:gravity="center_horizontal|center_vertical"
        android:background="@null"
        android:textColor="@color/lightgray"
        android:textSize="40sp"
        android:text="@string/Play"/>
    <!-- Play Pause end. -->
    <!-- Forward start. -->
    <Button
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal|center_vertical"
        android:background="@null"
        android:textColor="@color/lightgray"
        android:textSize="@dimen/PlayerButtonfont_sizeMedian"
        android:text="@string/Next"/>
    <!-- Forward end. -->
    <!-- Player button(s) end. -->
</RelativeLayout>