@{
    ViewBag.Title = "Home Page";
}
<script src="~/Application/Administration/CountryController.js"></script>
<div class="box-header with-border">
    <h3 class="box-title">Country</h3>
</div>
<form name="form" ng-submit="Country()" ng-controller="CountryController" role="form" ng-init="init()">
    <div class="box-body">
        <div ng-show="error" class="alert alert-danger">{{error}}</div>
        <div class="form-group">
            <div class="table-responsive">
                <table class="table table-striped table-condensed table-hover">
                    <thead>
                        <tr>
                            <th>SrNo</th>
                            <th>Id</th>
                            <th custom-sort order="Name" >Name</th>
                            <th custom-sort order="IsActive" >IsActive</th>
                            <th custom-sort order="CreatedDate" >CreatedDate</th>
                            <th custom-sort order="CreatedBy">CreatedBy</th>
                            <th custom-sort order="UpdatedDate">UpdatedDate</th>
                            <th custom-sort order="UpdatedBy">UpdatedBy</th>
                        </tr>                        
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in items | offset: currentPage * Country_Criteria_Model.RecordPerPage | limitTo: Country_Criteria_Model.RecordPerPage">
                            <td>{{item.SrNo}}</td>
                            <td>{{item.Id}}</td>
                            <td>{{item.Name}}</td>
                            <td>{{item.IsActive}}</td>
                            <td>{{item.CreatedDate}}</td>
                            <td>{{item.CreatedBy}}</td>
                            <td>{{item.UpdatedDate}}</td>
                            <td>{{item.UpdatedBy}}</td>
                        </tr>
                    </tbody>
                    <tfoot>                        
                        <tr>
                            <td colspan="3">
                                <div class="navigation-bar">
                                    <span class="pull-left"><strong>{{ Country_Criteria_Model.RecordPerBatch * Country_Criteria_Model.BatchIndex }}</strong>&nbsp;of&nbsp;<strong>{{ itemsLength }}</strong></span>
                                    <ul class="pagination pull-right">
                                        <li>
                                            <a href="#" ng-click="firstPage()"><span class="glyphicon glyphicon-fast-backward"></span>&nbsp;</a>
                                        </li>
                                        <li ng-class="prevPageDisabled()">
                                            <a href="#" ng-click="prevPage()"><span class="glyphicon glyphicon-backward"></span>&nbsp;</a>
                                        </li>
                                        <li ng-repeat="tbl_Pager_To_Client in List_tbl_Pager_To_Client_ByBatchIndex" ng-class="{active: (tbl_Pager_To_Client.BehindTheScenesIndex - 1) == currentPage}" ng-click="setPage(tbl_Pager_To_Client.BehindTheScenesIndex - 1)">
                                            <a href="#">{{tbl_Pager_To_Client.DisplayPageIndex}}</a>
                                        </li>
                                        <li ng-class="nextPageDisabled()">
                                            <a href="#" ng-click="nextPage()"><span class="glyphicon glyphicon-forward"></span>&nbsp;</a>
                                        </li>
                                        <li>
                                            <a href="#" ng-click="lastPage()"><span class="glyphicon glyphicon-fast-forward"></span>&nbsp;</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <div class="navigation-bar">
                                    <button type="button" class="btn btn-default pull-left">Default</button>
                                    <ul class="pagination pull-right">
                                        <li>
                                            <a href="#">«</a>
                                        </li>
                                        <li>
                                            <a href="#">1</a>
                                        </li>
                                        <li>
                                            <a href="#">2</a>
                                        </li>
                                        <li>
                                            <a href="#">3</a>
                                        </li>
                                        <li>
                                            <a href="#">4</a>
                                        </li>
                                        <li>
                                            <a href="#">5</a>
                                        </li>
                                        <li>
                                            <a href="#">»</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>            
        </div>
    </div>
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Show</button>
        <img ng-if="dataLoading" src="data:image/gif;base64," />
    </div>
</form>