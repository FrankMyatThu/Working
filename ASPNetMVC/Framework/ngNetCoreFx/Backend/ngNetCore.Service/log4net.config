<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <file value="D:\01.Project\GitHub\Working\ASPNetMVC\Framework\ngNetCoreFx\Logs\" />
    <datePattern value="yyyy.MM.dd'.log'" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="100" />
    <maximumFileSize value="10MB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <!-- Log for Customized Log Sample -->
  <appender name="CustomizedLog_Appender" type="log4net.Appender.RollingFileAppender">
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <file value="D:\01.Project\GitHub\Working\ASPNetMVC\Framework\ngNetCoreFx\Logs\Customized\" />
    <datePattern value="yyyy.MM.dd'.log'" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="100" />
    <maximumFileSize value="10MB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>
  <logger name="CustomizedLogger">
    <level value="ALL" />
    <appender-ref ref="CustomizedLog_Appender"/>
  </logger>
  <!-- End log for Customized Log Sample -->

  <root>
    <level value="ALL" />
    <appender-ref ref="RollingLogFileAppender" />
  </root>

</log4net>