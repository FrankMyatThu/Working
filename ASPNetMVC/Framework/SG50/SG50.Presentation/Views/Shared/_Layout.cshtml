<!DOCTYPE html>
<html ng-app="ApplicationRoot">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>    
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/App/ApplicationRoot.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/SG50.css" />      
    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }
</head>
<body ng-controller="ApplicationRootController">    
    <div id="header">       
        <nav role="navigation" class="navbar navbar-default navbar-fixed-top">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand">SG50</a>
            </div>
            <!-- Collection of nav links, forms, and other content for toggling -->
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Administration</a></li>
                    <li><a href="#">Backend</a></li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">About <b class="caret"></b></a>
                        <ul role="menu" class="dropdown-menu">
                            <li><a href="#">Help</a></li>
                            <li><a href="#">...</a></li>
                            <li><a href="#">...</a></li>
                            <li class="divider"></li>
                            <li><a href="#">...</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" ng-click="LogoutByClick();"><b>Log out&nbsp;</b></a></li>
                </ul>
                <form class="navbar-form">
                    <div class="form-group" style="display:inline;">                        
                        <div class="input-group" style="display:table;">                                                        
                            <input class="form-control" name="search" placeholder="Search Here" type="text">
                            <span class="input-group-addon" style="width:1%;"><span class="glyphicon glyphicon-search"></span></span>
                            <div class="col-md-6">&nbsp;</div>
                        </div>                            
                    </div>                                    
                </form>                
            </div>
        </nav>  
    </div>
    <div id="body">        
        @RenderBody()
    </div>
    <div id="footer">
        &nbsp;
    </div>
    <div id="hiddenAntiForgery"><input id="antiForgeryToken" data-ng-model="antiForgeryToken" type="hidden" data-ng-init="antiForgeryToken='@GetAntiForgeryToken()'" /></div>
</body>
</html>